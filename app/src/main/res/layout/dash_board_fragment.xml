<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/colorRecyclerBackground"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="300dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <com.andexert.library.RippleView
                android:id="@+id/dashboard_ripple_contatos"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_toLeftOf="@+id/more2"
                android:layout_margin="5dp"
                rv_centered="true">

                <ImageView
                    android:id="@+id/adiciona_contato"
                    android:src="@mipmap/add_contact"
                    android:layout_width="150dp"
                    android:scaleType="fitXY"
                    android:layout_height="150dp" />
            </com.andexert.library.RippleView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_height="match_parent">


            <com.andexert.library.RippleView
                android:id="@+id/dashboard_ripple_enderecos"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_toLeftOf="@+id/more2"
                android:layout_margin="5dp"
                rv_centered="true">
                <ImageView
                    android:id="@+id/adiciona_endereco"
                    android:src="@mipmap/add_endereco"
                    android:layout_width="150dp"
                    android:scaleType="fitXY"
                    android:layout_height="150dp" />
            </com.andexert.library.RippleView>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>